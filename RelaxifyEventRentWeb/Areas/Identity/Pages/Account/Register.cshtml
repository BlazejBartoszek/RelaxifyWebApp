@page
@model RegisterModel

<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
            <h2 class="pb-3 mb-4 text-secondary text-center">Utwórz nowe konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="ms-2 text-muted">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="ms-2 text-muted">Potwierdź hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="imię" />
                <label asp-for="Input.Name" class="ms-2 text-muted">Imię</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="ulica" />
                <label asp-for="Input.StreetAddress" class="ms-2 text-muted">Ulica</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="miasto" />
                <label asp-for="Input.City" class="ms-2 text-muted">Miasto</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="kodPocztowy"/>
                <label asp-for="Input.PostalCode" class="ms-2 text-muted">Kod pocztowy</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="numerTelefonu" />
                <label asp-for="Input.PhoneNumber" class="ms-2 text-muted">Numer telefonu</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"><option disabled selected>-Wybierz uprawnienia-</option></select>
                
            </div>
            <div class="col-12">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-3">Załóż konto</button>
            </div>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
