@model RelaxifyEventRentWeb.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow border-0 mt-4">
    <div class="ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Czy na pewno chcesz usunąć te kategorię?</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="mb-3 row p-1">
                    <label asp-for=Name class="ms-2"></label>
                    <input asp-for=Name disabled class="form-control border-0" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for=DisplayOrder class="ms-2"></label>
                    <input asp-for=DisplayOrder disabled class="form-control border-0" value="1" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Usuń</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Powrót do listy</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

