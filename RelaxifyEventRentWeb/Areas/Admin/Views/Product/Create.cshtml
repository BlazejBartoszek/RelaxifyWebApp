@model Product

<div class="card shadow border-0 mt-4">
    <div class="ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2">Utwórz produkt</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

<form method="post" class="row">
    <div class="border p-3">           
        <div class="mb-3 row p-1">
                    <label asp-for=ProductName class="ms-2"></label>
                    <input asp-for=ProductName class="form-control border-0" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
                    <label asp-for=Price class="ms-2"></label>
                    <input asp-for=Price class="form-control border-0" value="1" />
                    <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Utwórz</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Powrót do listy</a>
            </div>
        </div>    
    </div>
</form>

    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}